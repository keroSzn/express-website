@model List<express_website.Models.HucreClass>
@{
    ViewData["Title"] = "Hücre Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Hücre Listesi</h2>
<a class="btn btn-primary mb-3" href="/Admin/Hucre/Create">Yeni Hücre Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Hücre Metin</th>
            <th>Ait Olduğu Alan</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var h in Model)
        {
            <tr>
                <td>@h.HucreMetin</td>
                <td>@h.AitOlduguAlan?.AlanAdi</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@h.HucreId" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@h.HucreId" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>