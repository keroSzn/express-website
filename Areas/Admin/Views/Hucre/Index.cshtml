@model List<express_website.Models.HucreClass>
@{
    ViewData["Title"] = "Hücre Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Hücre Listesi</h2>
<a class="btn btn-primary mb-3" href="/Admin/Hucre/Create">Yeni Hücre Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Hücre Metin</th>
            <th>Ait Olduğu Alan</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HucreMetin</td>
                <td>@item.Alan?.AlanAdi</td>
                <td>
                    @*Düzenle*@
                    <a href="Hucre/Edit?id=@item.HucreId"><button type="submit"  class="btn btn-warning btn-sm">✏️ Düzenle</button></a>
                    @*Sil*@
                    <form method="post"  onsubmit="return confirm('Silmek istediğinizden emin misiniz?');">
                        <input type="hidden" name="id" value=@item.HucreId />
                        <input type="hidden" name="komut" value=1 />
                        <button type="submit"  class="btn btn-danger mt-2">🗑️ Sil</button>
                    </form> 
                </td>
            </tr>
        }
    </tbody>
</table>