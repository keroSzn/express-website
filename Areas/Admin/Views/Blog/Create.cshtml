@{
    ViewData["Title"] = "Yeni Blog Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Yeni Blog Ekle</h2>

<form asp-area="Admin" asp-controller="Blog" asp-action="Create" method="post">
    <div class="mb-3">
        <label for="tarih" class="form-label">Tarih</label>
        <input type="date" name="tarih" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="baslik" class="form-label">Başlık</label>
        <input type="text" name="baslik" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="icerik" class="form-label">İçerik</label>
        <textarea name="icerik" class="form-control" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>