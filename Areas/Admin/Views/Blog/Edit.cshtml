@model express_website.Models.BlogClass
@{
    ViewData["Title"] = "Blog Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>Blog Düzenle</h2>
<h3>@Model.BlogId</h3>

<form asp-area="Admin" asp-controller="Blog" asp-action="Edit" method="post">
    <input type="hidden" name="BlogId" value=@Model.BlogId />
    

    <div class="mb-3">
        <label asp-for="@Model.BlogTarih" class="form-label">Tarih</label>
        
        <input type="date" name="BlogTarih" value="@Model.BlogTarih.ToString("yyyy-MM-dd")" class="form-control" required /></input>
        
    </div>

    <div class="mb-3">
        <label asp-for="@Model.BlogBaslik" class="form-label">Başlık</label>
        <input type="text" name="BlogBaslik" value="@Model.BlogBaslik"  class="form-control" required />
        
    </div>

    <div class="mb-3">
        <label asp-for="@Model.BlogMetin" class="form-label">İçerik</label>
        <textarea name="BlogMetin" class="form-control" rows="5" required>@Model.BlogMetin</textarea>
        
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>