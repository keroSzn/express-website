@model List<express_website.Models.AltBaslikClass>
@{
    ViewData["Title"] = "Alt Başlıklar";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Alt Başlıklar</h2>
<a href="/Admin/AltBaslik/Create" class="btn btn-success">Yeni Alt Başlık</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>#</th>
            <th>Alt Başlık</th>
            <th>Başlık</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AltBaslikId</td>
                <td>@item.AltBaslikAdi</td>
                <td>@item.Baslik?.BaslikAdi</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AltBaslikId" class="btn btn-sm btn-primary">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.AltBaslikId" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>