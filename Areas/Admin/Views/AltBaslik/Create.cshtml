@{
    ViewData["Title"] = "Yeni Alt Başlık Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model List<express_website.Models.BaslikClass>



<h2>Yeni Alt Başlık Ekle</h2>

<form asp-area="Admin" asp-controller="AltBaslik" asp-action="Create" method="post">
    
    <div class="mb-3">
        <label for="altBaslikAdi" class="form-label">Alt Başlık Adı</label>
        <input type="text" name="altBaslikAdi" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="baslikId" class="control-label">Başlık</label>
        <select type="int" name="baslikId" class="form-control">
            
            @foreach (var item in Model)
            {
                <option value="@item.BaslikId">@item.BaslikAdi</option>

            }
            
        </select>
        <span asp-validation-for="baslikId" class="text-danger"></span>
    </div>

    

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

