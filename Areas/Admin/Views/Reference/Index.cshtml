    @foreach (var referans in Model)
    {
        var base64Image = Convert.ToBase64String(referans.ReferansGorsel ?? new byte[0]);
        var imageSrc = $"data:image/jpeg;base64,{base64Image}";

        <div class="col-md-3 text-center mb-3">
            <img src="@imageSrc" class="img-fluid rounded border" />

            <!-- Sil butonu -->
            <button type="button" class="btn btn-danger mt-2" data-bs-toggle="modal" data-bs-target="#deleteModal@referans.ReferansId">
                Sil
            </button>

            <!-- Modal -->
            <div class="modal fade" id="deleteModal@referans.ReferansId" tabindex="-1" aria-labelledby="modalLabel@referans.ReferansId" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form asp-area="Admin" asp-controller="Reference" asp-action="DeleteConfirmed" method="post">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalLabel@referans.ReferansId">Silme Onayı</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                            </div>
                            <div class="modal-body">
                                Bu görseli silmek istediğinizden emin misiniz?
                                <input type="hidden" name="id" value="@referans.ReferansId" />
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                <button type="submit" class="btn btn-danger">Sil</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
