@{
    ViewData["Title"] = "Yeni Referans Görselleri";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model List<express_website.Models.ReferansClass>

<h2>Referans Görselleri</h2>
<a href="/Admin/Reference/Create" class="btn btn-success mb-3">➕ Yeni Görsel Ekle</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Görsel</th>
            <th scope="col">⚙️ İşlemler</th>
        </tr>
    </thead>    
    <tbody>
        @*<div class="row">*@
            
            @foreach (var item in Model)
            {
                var base64Image = Convert.ToBase64String(item.ReferansGorsel ?? new byte[0]);
                var imageSrc = $"data:image/jpeg;base64,{base64Image}";
                <tr>
                    <td>@item.ReferansId</td>
                    <td><img src="@imageSrc" height="200" /></td>
                    <td><form method="post" " onsubmit="return confirm('Silmek istediğinizden emin misiniz?');">
                        <input type="hidden" name="id" value="@item.ReferansId" />
                        
                        <button type="submit"  class="btn btn-danger mt-2">🗑️ Sil</button>
                    </form></td>
                <div class="col-md-3 text-center mb-3">
                    
                    
                    
                    
                    
                </div>
                </tr>
            }
        @*</div>*@
    </tbody>
</table>