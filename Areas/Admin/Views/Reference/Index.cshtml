            @*<form asp-controller="Reference" asp-action="Remove" asp-route-id="@referans.ReferansId" onsubmit="return confirm('Bu görseli silmek istediğinizden emin misiniz?');">
                
                <button type="submit" class="btn btn-danger mt-2">Sil</button>
            </form>*@
              
            <form method="post" " onsubmit="return confirm('Silmek istediğinizden emin misiniz?');">
                <input type="hidden" name="id" value="@item.ReferansId" />
                @*<button type="submit" class="btn btn-primary">Kaydet</button>*@
