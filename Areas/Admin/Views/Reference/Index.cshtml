        var base64Image = Convert.ToBase64String(item.ReferansGorsel ?? new byte[0]);
        var imageSrc = $"data:image/jpeg;base64,{base64Image}";

        <div class="col-md-3 text-center mb-3">
            <img src="@imageSrc" class="img-fluid rounded border" />
            
            @*<a asp-controller="Reference" asp-action="Delete" asp-route-id="@referans.ReferansId">Sil</a>*@
