@model List<express_website.Models.AlanClass>
@{
    ViewData["Title"] = "Alan Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Alan Listesi</h2>
<a class="btn btn-primary mb-3" href="/Admin/Alan/Create">Yeni Alan Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Alan Adı</th>
            <th>Model ID</th>
            <th>İlişkili Eleman Modeli</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var alan in Model)
        {
            <tr>
                <td>@alan.AlanAdi</td>
                <td>@alan.ModelId</td>
                @*<td>@alan.AitOlduguElemanModeli?.ModelAdi</td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@alan.AlanId" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@alan.AlanId" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>