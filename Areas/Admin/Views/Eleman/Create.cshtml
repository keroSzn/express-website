@model express_website.Models.ElemanClass
@{
    ViewData["Title"] = "Yeni Eleman Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var altBasliklar = ViewBag.AltBasliklar as List<express_website.Models.AltBaslikClass>;
}

<h2>Yeni Eleman Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ElemanAdi">Eleman Adı</label>
        <input asp-for="ElemanAdi" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ElemanMetin">Eleman Metni</label>
        <textarea asp-for="ElemanMetin" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="AltBaslikId">Alt Başlık</label>
        <select asp-for="AltBaslikId" class="form-control">
            <option value="">-- Seçiniz --</option>
            @foreach (var alt in altBasliklar)
            {
                <option value="@alt.AltBaslikId">@alt.AltBaslikAdi</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Kaydet</button>
</form>