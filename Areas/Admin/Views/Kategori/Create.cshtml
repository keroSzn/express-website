@model express_website.Models.KategoriClass
@{
    ViewData["Title"] = "Yeni Kategori Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Yeni Kategori Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="KategoriAdi" class="control-label"></label>
        <input asp-for="KategoriAdi" class="form-control" />
        <span asp-validation-for="KategoriAdi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="KategoriMetin" class="control-label"></label>
        <textarea asp-for="KategoriMetin" class="form-control"></textarea>
        <span asp-validation-for="KategoriMetin" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>