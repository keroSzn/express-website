@model express_website.Models.KategoriClass
@{
    ViewData["Title"] = "Kategori Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Kategori Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="KategoriId" />
    <div class="form-group">
        <label asp-for="KategoriAdi" class="control-label"></label>
        <input asp-for="KategoriAdi" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="KategoriMetin" class="control-label"></label>
        <textarea asp-for="KategoriMetin" class="form-control" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>