@model express_website.Models.KategoriClass
@{
    ViewData["Title"] = "Kategori Sil";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Kategori Sil</h2>

<div class="alert alert-warning">
    <strong>@Model.KategoriAdi</strong> adlı kategoriyi silmek istediğinizden emin misiniz?
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="KategoriId" />
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Hayır</a>
</form>