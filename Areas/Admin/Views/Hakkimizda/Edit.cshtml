@model express_website.Models.HakkimizdaClass
@{
    ViewData["Title"] = "Hakkimizda Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>Hakkimizda Düzenle</h2>


<form asp-area="Admin" asp-controller="Hakkimizda" asp-action="Edit" method="post">

    <input type="hidden" name="HakkimizdaId" value=1 />
    <div class="mb-3">
        <label asp-for="@Model.HakkimizdaMetin" class="form-label">İçerik</label>
        <textarea name="HakkimizdaMetin" class="form-control" rows="10" required>@Model.HakkimizdaMetin</textarea>
        
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>